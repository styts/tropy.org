{{!< default}}

{{#post}}

<header class="{{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
  <nav class="{{#if image}}overlay{{/if}} clearfix">
    {{#if @blog.logo}}
      <a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}"/></a>
    {{/if}}
  </nav>
</header>

<main role="main">
  <article class="{{post_class}}">

    <header>
      <h1>{{title}}</h1>
      <section>
        <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
        {{tags prefix=" on "}}
      </section>
    </header>

    <section>
      {{content}}
    </section>

    <footer>

    {{#author}}
    {{#if image}}
    <figure>
      <a class="img" href="{{url}}" style="background-image: url({{image}})"><span class="hidden">{{name}}'s Picture</span></a>
    </figure>
    {{/if}}

    <section>
      <h4><a href="{{url}}">{{name}}</a></h4>

      {{#if bio}}
      <p>{{bio}}</p>
      {{else}}
      <p>Read <a href="{{url}}">more posts</a> by this author.</p>
      {{/if}}
      <div>
        {{#if location}}<span>{{location}}</span>{{/if}}
        {{#if website}}<span><a href="{{website}}">{{website}}</a></span>{{/if}}
      </div>
    </section>
    {{/author}}

    </footer>

  </article>
</main>

<aside>
  {{#next_post}}
  <a class="read-next-story {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
    <section class="post">
      <h2>{{title}}</h2>
      <p>{{excerpt words="19"}}&hellip;</p>
    </section>
  </a>
  {{/next_post}}
  {{#prev_post}}
  <a class="read-next-story prev {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
    <section class="post">
      <h2>{{title}}</h2>
      <p>{{excerpt words="19"}}&hellip;</p>
    </section>
  </a>
  {{/prev_post}}
</aside>

{{/post}}
