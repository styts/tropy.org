{{!< default}}
<header>
  <h1>{{@blog.title}}</h1>
  <h2>{{@blog.description}}</h2>
</header>

<main role="main">
  {{#foreach posts}}
  <article class="{{post_class}}">
    <header>
      <h2><a href="{{url}}">{{title}}</a></h2>
    </header>
    <section>
      <p>{{excerpt words="26"}} <a href="{{url}}">&raquo;</a></p>
    </section>
    <footer>
      {{#if author.image}}
        <img src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />
      {{/if}}
      {{author}}
      {{tags prefix=" on "}}
      <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
    </footer>
  </article>
  {{/foreach}}

  {{pagination}}
</main>
